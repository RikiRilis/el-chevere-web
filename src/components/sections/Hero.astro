---
import { getI18N } from '@/languages/index'

const currentLocale = Astro.currentLocale
const i18n = getI18N({ currentLocale })
---

<div
	class='parallax absolute left-0 top-0 h-screen w-full translate-y-0 bg-parallax-1 bg-cover bg-fixed bg-center'
>
</div>

<div
	class='relative z-10 flex h-full w-full items-end justify-center bg-black/50 px-4 py-20 pt-28 sm:px-6 lg:px-8'
>
	<div class='flex w-full max-w-4xl flex-col gap-4 md:w-11/12 lg:w-8/12'>
		<a href='https://fotoestudioelchevere.com/' class='mb-4 flex max-w-sm items-center md:max-w-md'>
			<img
				src='https://www.fotoestudioelchevere.com/logo-hero.png'
				srcset='https://www.fotoestudioelchevere.com/logo-hero.png'
				width='1821'
				height='773'
				loading='lazy'
				alt='Foto Estudio El ChÃ©vere Hero Logo'
			/>
		</a>
		<p class='max-w-4xl text-pretty text-lg font-medium text-secondary md:text-xl'>
			{i18n.HERO_TEXT_1}
			<br />
			{i18n.HERO_TEXT_2}
		</p>

		<div class='flex max-w-2xl flex-col gap-2 md:flex-row md:items-center md:gap-4'>
			<!-- <a
				href='/schedule'
				class='group relative mt-4 flex w-full cursor-pointer flex-row items-center justify-center gap-2 overflow-hidden rounded-xl border border-transparent bg-main px-3 py-2 text-lg font-bold text-primary transition active:border-blue-600 active:bg-sky-700 sm:hover:border-primary'
			>
				<span
					class='absolute left-0 h-full w-0 -skew-x-3 bg-accent transition-all duration-300 ease-in-out group-active:w-full sm:group-hover:w-full'
				></span>
				<span class='relative'>{i18n.HERO_BUTTON_TEXT_1}</span>
			</a> -->

			<a
				href='/#portfolio'
				class='sm:hover:border-tranparent group relative mt-4 flex w-full cursor-pointer flex-row items-center justify-center gap-2 overflow-hidden rounded-xl border border-secondary bg-transparent px-3 py-2 text-lg font-bold text-primary transition active:border-transparent active:bg-blue-900 active:text-primary sm:hover:text-primary'
			>
				<span
					class='absolute left-0 h-full w-0 -skew-x-3 bg-blue-950 transition-all duration-300 ease-in-out group-active:w-full sm:group-hover:w-full'
				></span>
				<span class='relative'>{i18n.HERO_BUTTON_TEXT_2}</span>
			</a>
		</div>
	</div>
</div>

<script>
	import { $ } from '@/libs/dom-selector.ts'

	document.addEventListener('astro:page-load', () => {
		window.addEventListener('scroll', () => {
			const parallax = $('.parallax')
			const offset = window.scrollY
			if (parallax) parallax.style.transform = `translateY(${offset * 0.5}px)`
		})
	})
</script>
