---
import UpArrow from '@/icons/UpArrow.astro'
---

<a
	id='go-top-btn'
	class='active:bg-main sm:hover:bg-main group fixed bottom-20 right-4 z-30 flex size-12 cursor-pointer items-center justify-center rounded-xl border border-slate-800 bg-blue-950 transition duration-300 active:border-accent sm:hover:border-accent'
>
	<UpArrow
		class='size-6 transform text-slate-400 transition duration-300 sm:rotate-45 sm:group-hover:rotate-0'
	/>
</a>

<style>
	#go-top-btn {
		visibility: hidden;
		opacity: 0;
		animation: visibility linear both;
		animation-timeline: scroll();
		animation-range: 0 200px;
	}

	@keyframes visibility {
		to {
			visibility: visible;
			opacity: 1;
		}
	}
</style>

<script>
	import { $ } from '@/libs/dom-selector.ts'

	document.addEventListener('astro:page-load', () => {
		const goToTopBtn = $('#go-top-btn') as HTMLAnchorElement
		goToTopBtn.addEventListener('click', () => {
			window.scrollTo(0, 0)
		})
	})
</script>
