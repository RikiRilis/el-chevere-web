---
import type { NavItem } from '@/interfaces/navItems'
import { getI18N } from '@/languages/index.ts'
import { navItemsProvider } from '@/libs/consts'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
const navItems: NavItem[] = navItemsProvider(currentLocale)
---

<header class='fixed z-50 flex w-full justify-center'>
	<div id='header' class='my-4 flex h-auto w-fit items-center gap-x-2 overflow-hidden rounded-xl'>
		<nav class='flex flex-row items-center justify-center text-center font-semibold text-secondary'>
			{
				navItems.map((item) => (
					<a
						href={item.url}
						aria-label={item.label}
						class='inline-block h-full select-none p-2 transition hover:bg-secondary/10'
					>
						{item.title}
					</a>
				))
			}
		</nav>
	</div>
</header>

<style>
	#header {
		animation: bgBlur linear both;
		animation-timeline: scroll();
		animation-range: 0 100px;
	}

	@keyframes bgBlur {
		to {
			@apply bg-main/50 shadow-md backdrop-blur-3xl;
		}
	}
</style>
