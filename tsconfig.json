{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/components/*"],
      "@/icons": ["src/icons/*"],
      "@/services": ["src/services/*"],
      "@/interfaces": ["src/interfaces/*"],
      "@/languages": ["src/languages/*"],
      "@/db": ["src/db/*"],
      "@/lib": ["src/libs/*"],
      "@/hooks": ["src/hooks/*"],
      "@/functions": ["src/functions/*"]
    }
  }
}
