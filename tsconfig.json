{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components": [
        "src/components/*"
      ],
      "@/icons": [
        "src/icons/*"
      ],
      "@/services": [
        "src/services/*"
      ],
      "@/interfaces": [
        "src/interfaces/*"
      ],
      "@/languages": [
        "src/languages/*"
      ],
      "@/db": [
        "src/db/*"
      ],
      "@/libs": [
        "src/libs/*"
      ],
      "@/hooks": [
        "src/hooks/*"
      ]
    }
  }
}